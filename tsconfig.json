{
  "compilerOptions": {
    "target": "ES2020", // Modern Node.js target (adjustable)
    "module": "CommonJS", // Change to ESM
    "outDir": "./dist", // Output compiled JS here
    "rootDir": ".", // Source files in src/
    "declaration": true, // Generate .d.ts files for TS users
    "strict": true, // Enforce strict type checking
    "esModuleInterop": true, // Better module interop
    "moduleResolution": "node10", // Node.js-style resolution
    "skipLibCheck": true, // Speed up compilation
    "allowUnusedLabels": true, // Keep your preference
    "noUnusedLocals": false, // Keep your preference
    "noUnusedParameters": false // Keep your preference
  },
  "include": [
    "index.ts",
    "src/**/*"
  ], // Compile everything in src/
  "exclude": [
    "node_modules",
    "dist",
    "user-app"
  ], // Exclude user-app/
  "ts-node": {
    "esm": false // Use CommonJS with ts-node for consistency
  }
}